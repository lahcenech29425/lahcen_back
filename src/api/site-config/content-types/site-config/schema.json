{
  "kind": "singleType",
  "collectionName": "site_configs",
  "info": {
    "singularName": "site-config",
    "pluralName": "site-configs",
    "displayName": "site_config"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string"
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "MAD",
        "EUR",
        "USD"
      ]
    },
    "currencySymbol": {
      "type": "string"
    },
    "contactEmail": {
      "type": "email"
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "socialLinks": {
      "type": "component",
      "component": "global.social-link",
      "repeatable": true
    },
    "footerText": {
      "type": "string"
    },
    "maintenanceMode": {
      "type": "boolean",
      "default": false
    },
    "maintenanceTitle": {
      "type": "string",
      "default": "الموقع تحت الصيانة"
    },
    "maintenanceMessage": {
      "type": "text",
      "default": "نحن نعمل على تحسين الموقع. يرجى العودة لاحقاً."
    }
  }
}