{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "orderItems": {
      "type": "component",
      "component": "orders.order-item",
      "repeatable": true
    },
    "total": {
      "type": "decimal"
    },
    "order_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "shipping_address": {
      "type": "component",
      "component": "elements.address",
      "repeatable": false
    },
    "phone": {
      "type": "biginteger",
      "required": true
    }
  }
}
